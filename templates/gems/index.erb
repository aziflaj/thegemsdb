<% @gems.each do |g| %>
  <div class="gemstone">
    <span class="gemstone--name">
      <%= g.name %>
    </span>
    <a href="<%= "/gems/#{g.id}/edit" %>" class="btn btn-default btn-sm">Edit</a>
    <form class="delete" action="<%= "/gems/#{g.id}" %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" class="btn btn-danger btn-sm" value="Delete">
    </form>
  </div>
<% end %>
